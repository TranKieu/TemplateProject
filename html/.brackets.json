{
    "path": {
        "scss/style.scss": {
            "sass.enabled": true,
            "sass.options": {
                "outputDir": "../css/",
                "imagePath": null,
                "sourceComments": true,
                "outputStyle": "nested"
            }
        }
    },
	
    "bb.beautify.onSave": true,
    "path": {
        "**min**": {
            "bb.beautify.onSave": false
        }
    },
    "language": {
        "html": {
            "bb.beautify.onSave": false
        }
    }

}