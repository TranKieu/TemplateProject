{
    "compileOnSave": false,
    "compilerOptions": {

        "target": "es2017",

        /* tùy môi trường chạy: 'amd', 'system' */
        "module": "commonjs",
        /* Vì ES2017 nên cần thêm thư viện  */
        "lib": ["es2017", "dom"],
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",

        "sourceMap": true,
        "removeComments": true,

        //"strict": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ],

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    /* Ko Compiler */
    "exclude": [
        "node_modules"
    ]
}